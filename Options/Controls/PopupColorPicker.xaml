<UserControl x:Class="YoderZone.Extensions.OptionsDialog.Controls.PopupColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:YoderZone.Extensions.OptionsDialog.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:YoderZone.Extensions.OptionsDialog.ViewModel"
             d:DesignHeight="23"
             d:DesignWidth="100"
             mc:Ignorable="d">
    <UserControl.Resources>
        <viewModel:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    </UserControl.Resources>
    <Grid>
        <Rectangle HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   Fill="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                 AncestorType={x:Type controls:PopupColorPicker}},
                                  Converter={StaticResource ColorToBrushConverter},
                                  Path=ColorSwath}" />
        <Popup x:Name="Popup"
               StaysOpen="True"
               IsOpen="{Binding IsOpen, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:PopupColorPicker}}}">
            <Border Background="WhiteSmoke"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    BorderThickness="1"
                    Padding="1">
                <Border Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                        BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                        BorderThickness="1">
                    <controls:ColorPicker Width="300"
                                          ColorSwath="{Binding ColorSwath,
                                                               Mode=TwoWay,
                                                               RelativeSource={RelativeSource FindAncestor,
                                                                                              AncestorType={x:Type controls:PopupColorPicker}}}"
                                          Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrush}}"
                                          Padding="4,0" />
                </Border>
            </Border>
        </Popup>
    </Grid>
</UserControl>
